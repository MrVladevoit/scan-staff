              input(type="text" class="input form-report__input fieldset__input" placeholder="0" maxlength="2")
              input(type="text" class="input form-report__input fieldset__input" placeholder="0" maxlength="2")
        .col-sm-8.col-xxl-8
          fieldset.fieldset
            label.label-form.form-report__label Номер паспорта:
            .fieldset__group-number
              .fieldset__group-number
                input(type="text" class="input form-report__input fieldset__input js-mask-number" placeholder="0" maxlength="1")
                input(type="text" class="input form-report__input fieldset__input js-mask-number" placeholder="0" maxlength="1")
