form(id="form-entering-data" class="form-report form-report--entering-data")
  //- row
  .form-report__row.row
    .col-sm-4
      //- id, text
      +labelComponent('#lastname', "Фамилия:")(class="form-report__label")
      //- type,id, placeholder, requiredAttr
      +inputComponent(
        "text",
        "#lastname",
        "Например, Иванов"
      )(class="form-report__input")
    .col-sm-4
      //- id, text
      +labelComponent('#lastname', "Имя:")(class="form-report__label")
      //- type,id, placeholder, requiredAttr
      +inputComponent(
        "text",
        "#firstname",
        "Например, Иван"
      )(class="form-report__input")
    .col-sm-4
      //- id, text
      +labelComponent('#middlename', "Отчество:")(class="form-report__label")
      //- type,id, placeholder, requiredAttr
      +inputComponent(
        "text",
        "#middlename",
        "Например, Иванович"
      )(class="form-report__input")
  //- row
  .form-report__row.row
    .col-sm-4
      label.label-form.form-report__label Год рождения:
      //- select
      include select_year/select_year
    .col-sm-8
      //- id, text
      +labelComponent('#city', "Год проживания:")(class="form-report__label")
      //- type,id, placeholder, requiredAttr
      +inputComponent(
        "text",
        "#city",
        "например, Александровск-Сахалинский"
      )(class="form-report__input")
  //- row
  .form-report__row.row.form-report__row--passport
    .col-xs-12.col-xxl-8
      .row
        .col-sm-4.col-xxl-4
          fieldset.fieldset
            label.label-form.form-report__label Серия паспорта:
            .fieldset__group-number
              input(type="text" class="input form-report__input fieldset__input" placeholder="0" maxlength="2")
