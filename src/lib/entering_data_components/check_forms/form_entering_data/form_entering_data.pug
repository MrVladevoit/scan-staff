                input(type="text" class="input form-report__input fieldset__input js-mask-number" placeholder="0" maxlength="1")
    .col-xs-12.col-xxl-4
      fieldset.fieldset
        label.label-form.form-report__label Дата выдачи:
        .fieldset__group-number
          .fieldset__group-date
            input(type="text" class="input form-report__input fieldset__input js-mask-number" placeholder="0" maxlength="2")
            input(type="text" class="input form-report__input fieldset__input js-mask-number" placeholder="0" maxlength="2")
          .fieldset__group-date
            input(type="text" class="input form-report__input fieldset__input js-mask-number" placeholder="0" maxlength="2")
            input(type="text" class="input form-report__input fieldset__input js-mask-number" placeholder="0" maxlength="2")
          .fieldset__group-date
            input(type="text" class="input form-report__input fieldset__input js-mask-number" placeholder="0" maxlength="2")
            input(type="text" class="input form-report__input fieldset__input js-mask-number" placeholder="0" maxlength="2")
  //- row
  .form-report__row.row.form-report__row--organization
    .col-xl-7.col-xxl-8
